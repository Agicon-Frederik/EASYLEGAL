# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.prisma text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.xml text eol=lf
*.txt text eol=lf
*.sh text eol=lf

# Git configuration files
.gitattributes text eol=lf
.gitignore text eol=lf
.editorconfig text eol=lf
.eslintrc text eol=lf
.prettierrc text eol=lf

# Config files
*.config.js text eol=lf
*.config.ts text eol=lf
*.conf text eol=lf
*.ini text eol=lf
.env text eol=lf
.env.* text eol=lf

# Documentation
*.rst text eol=lf
LICENSE text eol=lf
AUTHORS text eol=lf
CHANGELOG text eol=lf
CONTRIBUTING text eol=lf
README text eol=lf

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary
*.ez binary
*.bz2 binary
*.swp binary
*.db binary
*.sqlite binary

# Package lock files - keep their original line endings
package-lock.json text eol=lf
yarn.lock text eol=lf
pnpm-lock.yaml text eol=lf
