{
  "name": "easylegal-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "EASYLEGAL monorepo containing backend, frontend, and common packages",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "node packages/common/scripts/postinstall.js",
    "dev": "npm run dev --workspace=@easylegal/backend",
    "dev:frontend": "npm run dev --workspace=@easylegal/frontend",
    "dev:backend": "npm run dev --workspace=@easylegal/backend",
    "build": "npm run build --workspaces --if-present",
    "build:backend": "npm run build --workspace=@easylegal/backend",
    "build:frontend": "npm run build --workspace=@easylegal/frontend",
    "build:common": "npm run build --workspace=@easylegal/common",
    "test": "npm run test --workspace=@easylegal/backend",
    "test:backend": "npm run test --workspace=@easylegal/backend",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "install:all": "npm install",
    "fix-permissions": "bash packages/common/scripts/fix-permissions.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
